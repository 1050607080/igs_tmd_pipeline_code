                                // 複製 ios 到 iostesting
                                def copyCommand = "powershell -Command \"Copy-Item -Path 'D:\\webGame\\Game\\TMD_mobile\\data\\ios\\*' -Destination 'D:\\webGame\\Game\\TMD_mobile\\data\\iostesting' -Recurse -Force\""
                                sshCommand remote: remote, command: copyCommand
                            }
