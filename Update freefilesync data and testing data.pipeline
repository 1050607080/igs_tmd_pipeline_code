    stages {

        stage('Fix targetversion') {
            steps {
                script{
                    echo 'Fix targetversion'

                    //REMOTE
                    withCredentials([usernamePassword(credentialsId: REMOTE4463_CREDENTIALS, passwordVariable: 'REMOTE_PASSWORD', usernameVariable: 'REMOTE_USER')]) {
